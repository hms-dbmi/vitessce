{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hms-dbmi/vitessce/#cells",
  "title": "Vitessce cell data",
  "type": "object",
  "definitions": {
    "coord": {
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "items": { "type": "number" }
    }
  },
  "patternProperties": {
    ".": {
      "additionalProperties": false,
      "properties": {
        "tsne": { "$ref": "#/definitions/coord" },
        "xy": { "$ref": "#/definitions/coord" },
        "cluster": { "type": "string" },
        "genes": {
          "type": "object",
          "patternProperties": {
            ".": {
              "type": "integer",
              "minimum": 0
            }
          }
        },
        "poly": {
          "type": "array",
          "items": { "$ref": "#/definitions/coord" }
        }
      }
    }
  }
}
