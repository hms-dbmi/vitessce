{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hubmapconsortium/vitessce/#cells",
  "title": "Vitessce cell data",
  "type": "object",
  "definitions": {
    "coord": {
      "type": "array",
      "minItems": 2,
      "maxItems": 2,
      "items": { "type": "number" }
    },
    "positiveIntegerValues": {
      "type": "object",
      "patternProperties": {
        ".": {
          "type": "integer",
          "minimum": 0
        }
      }
    },
    "stringValues": {
      "type": "object",
      "patternProperties": {
        ".": {
          "type": "string"
        }
      }
    }
  },
  "patternProperties": {
    ".": {
      "additionalProperties": false,
      "properties": {
        "mappings": {
          "type": "object",
          "patternProperties": {
            ".": { "$ref": "#/definitions/coord" }
          }
        },
        "xy": { "$ref": "#/definitions/coord" },
        "genes": { "$ref": "#/definitions/positiveIntegerValues" },
        "factors": { "$ref": "#/definitions/stringValues" },
        "poly": {
          "type": "array",
          "items": { "$ref": "#/definitions/coord" }
        }
      }
    }
  }
}
