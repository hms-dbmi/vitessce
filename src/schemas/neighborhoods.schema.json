{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hms-dbmi/vitessce/#neighborhoods",
  "title": "Vitessce neighborhood data",
  "type": "object",
  "definitions": {
    "coord": {
      "type": "array",
      "maxItems": 2,
      "minItems": 2,
      "items": { "type": "number" }
    }
  },
  "patternProperties": {
    ".": {
      "additionalProperties": false,
      "properties": {
        "poly": {
          "type": "array",
          "maxItems": 3,
          "minItems": 3,
          "items": { "$ref": "#/definitions/coord" }
        }
      }
    }
  }
}
