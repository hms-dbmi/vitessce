{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/hubmapconsortium/vitessce/#raster",
  "title": "Vitessce image data",
  "type": "object",
  "definitions": {
    "imageTransform": {
      "type": "object",
      "additionalProperties": false,
      "required": ["scale", "translate"],
      "properties": {
        "scale": { "type": "integer" },
        "translate": {
          "type": "object",
          "additionalProperties": false,
          "required": ["y", "x"],
          "properties": {
            "y": { "type": "integer" },
            "x": { "type": "integer" }
          }
        }
      }
    },
    "imageDimensions": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["field", "type", "values"],
        "properties": {
          "field": { "type": "string" },
          "type": {
            "type": "string",
            "examples": ["quantitative", "nominal", "ordinal", "temporal"]
          },
          "values": {
            "type": ["array", "null"],
            "items": { "type": "string" }
          }
        }
      }
    },
    "imageMetadata": {
      "type": "object",
      "additionalProperties": false,
      "required": ["dimensions", "is_pyramid", "transform"],
      "properties": {
        "dimensions": { "$ref": "#/definitions/imageDimensions" },
        "is_pyramid": { "type": "boolean" },
        "transform": { "$ref": "#/definitions/imageTransform" }
      }
    },
    "image": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "url", "type", "metadata"],
      "properties": {
        "name": { "type": "string" },
        "url": { "type": "string" },
        "type": { "type": "string" },
        "metadata": { "$ref": "#/definitions/imageMetadata" }
      }
    }
  },
  "additionalProperties": false,
  "required": ["schema_version", "images"],
  "properties": {
    "schema_version": { "type": "string" },
    "images": {
      "type": "array",
      "items": { "$ref": "#/definitions/image" }
    }
  }
}